.clients
  &__list
    display: flex
    flex-wrap: wrap
    align-items: center

  &__item
    width: (100% / 4)

.client
  opacity: .8
  transition: opacity $tr.time $tr.func

  &:hover
    opacity: 1
    img
      filter: grayscale(0%)

  img
    display: block
    width: 100%
    height: auto
    filter: grayscale(100%)
    transition: filter $tr.time $tr.func
