//
// Typography
// --------------------------------------------------
// Headings
// -------------------------

for $size in 1 2 3 4
    .h{$size},
    h{$size}
      font-family: $font-family-default
      font-style: normal
      font-weight: 400
      line-height: 1.4

for $size in 5 6
    .h{$size},
    h{$size}
      font-family: $font-family-default
      font-style: normal
      font-weight: 500
      line-height: 1.85
      text-transform: uppercase

.h1, h1
  font-size: 3rem

  +md()
    font-size: 4.8rem

.h2, h2
  font-size: 2.2rem

  +md()
    font-size: 3.6rem

.h3, h3
  font-size: 2.2rem

  +md()
    font-size: 2.4rem

.h4, h4
  font-size: 1.7rem

  +md()
    font-size: 2rem

.h5, h5
  font-size: 1.3rem

  +md()
    font-size: 1.6rem

.h6, h6
  font-size: 1.4rem


// Colors
// -------------------------

for $name, $value in $colors
  .color-{$name}
    color: $value

// Backgrounds
// -------------------------

for $name, $value in $colors
  .background-{$name}
    background-color: $value

blockquote
  font-family: $font-family-serif
  font-style: normal
  font-weight: 400
  font-size: 2.2rem
  line-height: 1.41666667
  margin: 0

  +md()
    font-size: 3.2rem

  span
    &::before
      content: open-quote

    &::after
      content: close-quote

  footer
    cite
      font-family: $font-family-default
      font-style: normal
      font-size: 1.3rem
      color: $colors.gray_5

      +md()
        font-size: 1.6rem

.text
  &-small
    font-size: 1.1rem

  &-medium
    font-size: 1.3rem

    +md()
      font-size: 1.6rem

  &-large
    font-size: 1.5rem

    +md()
      font-size: 1.8rem

.list
  padding: 0
  margin: 0

  &__item
    margin: 0 0 2rem 0

  &_bullet
    list-style: none

    & ^[-1]__item
      position: relative
      padding: 0 0 0 1.5rem

      &::before
        content: ''
        position: absolute
        width: .5rem
        height: .5rem
        border-radius: 100%
        background: $colors.white
        top: .9rem
        left: 0

.link
  position: relative
  text-decoration: none
  color: $colors.blue

  &:hover
    &::before
      border-radius: .5rem
      opacity: 0.25
      transform: scale(1)

  &::before
    content: " "
    position: absolute
    display: block
    top: -.1em
    right: -.3em
    left: -.3em
    bottom: -.1em
    background: rgba($colors.blue, .3)
    opacity: 0
    transition: all 0.15s ease-in-out
    transform: scale(1.1)
