@keyframes pulse
  0%
    opacity: 0
  100%
    opacity: 1

@keyframes features-content
  100%
    opacity: 1
    top: 0

@keyframes features-background
  100%
    opacity: 1
    bottom: 0
    right: 0

@keyframes pulse-icon
  0%
    transform: scale(1)
  50%
    transform scale(1.1)
    fill: $colors.indigo_5
    stroke: $colors.indigo_5
  100%
    transform: scale(1)

@keyframes tabsIn
  0%
    opacity: 0
    top: 0
  100%
    opacity: 1

animation($name, $duration, $function, $delay, $mode)
  animation-name: $name
  animation-duration: $duration
  animation-timing-function: $function
  animation-delay: $delay
  animation-fill-mode: $mode
